{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "dist/*"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "a11y": {
        "noAutofocus": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noExplicitAny": "warn",
        "noExtraNonNullAssertion": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "indentStyle": "space",
      "lineWidth": 120,
      "quoteStyle": "single"
    }
  }
}